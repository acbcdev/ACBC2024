---
interface Props {
  title: string;
  description: string;
  image?: string;
  canonical?: string;
}

const { title, description, image = "/img/og.png", canonical } = Astro.props;

const determineCanonicalURL = () => {
  if (Astro.url.host.includes("localhost")) return "http://localhost:4321";
  return canonical || Astro.url.pathname;
};

const canonicalURL = new URL(determineCanonicalURL(), Astro.site);
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/avif" href="/favicon.avif" />
<meta
  name="keywords"
  content="Camilo Blandon ACBC Frontend Developer Portafolio Andres Camilo Blandon Contreras Dev"
/>
<meta name="theme-color" content="#333" />
<!-- <meta name="generator" content={Astro.generator} /> -->

<!-- Font preloads -->

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:site_name" content="ACBC Porfolio" />
<meta property="og:locale" content="co_CO" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@acbc_dev" />
<meta name="twitter:creator" content="@acbc_dev" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- This meta tag tells Google to index and follow the links on your site. -->
<meta name="googlebot" content="index, follow" />

<!-- This meta tag is used to verify ownership of your site. You can get the verification code from Google Search Console. 
    It helps Google to recognize your site and improve its search results. -->
<meta
  name="google-site-verification"
  content="_8tgZssrC4YCXssdqAnw1bEGNb8alDvaOa0cQCAWkXc"
/>
